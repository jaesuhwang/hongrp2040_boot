{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "configure macOS",
      "type": "shell",
      "command": "cmake -S . -B build -DPICO_BOARD=rp2040_baram -DPICO_SDK_PATH='~/dev/pico/pico-sdk' -DPICO_EXTRAS_PATH='~/dev/pico/pico-extras'",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "configure windows",
      "type": "shell",
      // "command": "cmake -S . -B build -DPICO_BOARD=pico -G 'MinGW Makefiles' -DPICO_SDK_PATH='C:/Dev/pico/pico-sdk'",
      "command": "cmake -S . -B build -DPICO_BOARD=rp2040_baram -G 'MinGW Makefiles' -DPICO_SDK_LIB_PATH='C:/Dev_Lib/PICO_SDK_LIB/pico-sdk'",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cmake --build build -j16",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "cmake --build build --target clean",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "down macOS",
      "type": "shell",
      "command": "./tools/mac/rp2040_loader -p /dev/cu.usbmodem124201 -f build/src/rp2040_fw.bin -r",
      "group": {
        "kind": "build",
        "isDefault": true
      }      
    },
    {
      "label": "down Windows",
      "type": "shell",
      "command": "./tools/windows/rp2040_loader.exe -p com11 -f build/src/hong_rp2040_boot.bin -u",
      // "command": "./tools/windows/rp2040_loader.exe -p com44 -f build/src/rp2040_fw.bin -r",
      "group": {
        "kind": "build",
        "isDefault": true
      }      
    },
    {
      "label": "minicom",
      "type": "shell",
      "command": "minicom -D /dev/cu.usbmodem124201",
      "group": {
        "kind": "build",
        "isDefault": true
      }      
    },
  ]
}